<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lmlx.app.dao.base.ManageUserInfoMapper" >

    <resultMap id="baseResultMap" type="com.lmlx.app.model.po.ManageUserInfo">
        <result column="user_id" property="userId" jdbcType="BIGINT" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="account" property="account" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="head_sculpture" property="headSculpture" jdbcType="VARCHAR" />
        <result column="address" property="address" jdbcType="VARCHAR" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
        <result column="e_mail" property="eMail" jdbcType="VARCHAR" />
        <result column="role_id" property="roleId" jdbcType="BIGINT" />
    </resultMap>

    <sql id="baseSelectStr">
        USER_ID, USER_NAME, ACCOUNT, HEAD_SCULPTURE, ADDRESS, PHONE, E_MAIL, ROLE_ID
    </sql>

    <select id="qryByAccount" parameterType="com.lmlx.app.model.so.ManageUserInfoSo" resultMap="baseResultMap">
        SELECT <include refid="baseSelectStr"/>
        FROM MANAGE_USER_INFO
        WHERE ACCOUNT = #{account}
    </select>
</mapper>
